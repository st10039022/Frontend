<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#2E2E2E"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="About Us"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- White Content Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Contact Information Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal" />

            <!-- Phone Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_phone"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+27 31 765 3080"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_email"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="newlifebabyhome@gmail.com"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    android:contentDescription="Location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03 West Riding Road, Hillcrest,\nKwaZulu-Natal, South Africa"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Website -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_web"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    android:contentDescription="Website" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://hillside.org.za/new-life-baby-home/"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- NPO Registration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_certificate"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Certificate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non Profit Registration No. 123-446"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- BBBEEE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_certification"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Certification" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BBBEEE Eligible"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Our Partners Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Partners"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Hillside Church -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hillside"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="top"
                    android:contentDescription="Hillside Church" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hillside Church"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="New Life Baby Home is supported and resourced by Hillside Church in KZN and its leaders"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- IKUSASETHU -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ikusasethu"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="top"
                    android:contentDescription="IKUSASETHU" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IKUSASETHU"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="A local npo driven by Hillside Church Aiming to Impact the lives and futures of disadvantaged children and teenagers living in KZN"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Message Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We look forward from hearing from you,\nShare your thoughts with us"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="2dp" />

            <!-- Message Input -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your message.."
                android:textColorHint="#999999"
                android:textColor="#333333"
                android:textSize="14sp"
                android:background="@drawable/input_field_background"
                android:padding="12dp"
                android:minHeight="40dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/ic_home_bottom"
                android:scaleType="center" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/ic_search_bottom"
                android:scaleType="center" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/ic_notification_bottom"
                android:scaleType="center" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="1"
                android:src="@drawable/ic_profile_bottom"
                android:scaleType="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>