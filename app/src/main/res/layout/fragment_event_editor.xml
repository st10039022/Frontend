<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create Event"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="6dp"
            android:padding="16dp"
            android:background="@color/white"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event name"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/et_event_name"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@android:color/white"
                    android:textColor="@color/black"
                    android:hint="e.g. Charity Drive"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>

                <EditText
                    android:id="@+id/et_event_desc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="top"
                    android:background="@android:color/white"
                    android:textColor="@color/black"
                    android:hint="What is this event about?"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:inputType="textMultiLine"/>

                <!-- Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tv_event_date"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Tap to pick date"
                    android:textColor="@color/black"
                    android:background="@android:color/white"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="false"/>

                <!-- Start time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start time"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tv_event_start"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Tap to pick start"
                    android:textColor="@color/black"
                    android:background="@android:color/white"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="false"/>

                <!-- End time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End time"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tv_event_end"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Tap to pick end"
                    android:textColor="@color/black"
                    android:background="@android:color/white"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="false"/>

                <Button
                    android:id="@+id/btn_save_event"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:text="Save"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/light_blue"
                    android:background="@null"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
