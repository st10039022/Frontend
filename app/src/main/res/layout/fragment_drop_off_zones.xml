<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="120dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dropping off a donation?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Map Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/map"
                    android:scaleType="centerCrop" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/buttonOpenMaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_navigation"
                            app:tint="@color/light_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open in Maps"
                            android:textSize="12sp"
                            android:textColor="@color/light_blue"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Address and Hours -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03 West Riding Road, Hillcrest, KZN"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop-off Hours:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday to Friday, 8:00 AM â€“ 4:00 PM"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We kindly ask that all donations be made during working hours."
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/buttonGetDirections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Directions"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/light_blue"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_navigation"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCallUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Us"
            android:textColor="@color/light_blue"
            android:background="@drawable/button_outline"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Wishlist Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wish List"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Below is a list of items we currently need most"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Admin Controls -->
        <LinearLayout
            android:id="@+id/adminControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/inputProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter product name"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_outline" />

            <Spinner
                android:id="@+id/spinnerPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/priorities"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnAddProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Product"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/light_blue" />
        </LinearLayout>

        <!-- Wishlist container forced white -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerWishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                android:background="@android:color/white"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
        </androidx.cardview.widget.CardView>

        <!--spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="220dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
