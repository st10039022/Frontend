<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!--  Header  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Dropping off a donation?"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!--  Map Image Container  -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--  Static Map Image  -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/map"
                    android:scaleType="centerCrop"/>

                <!--  Map Overlay Button  -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/buttonOpenMaps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_navigation"
                            app:tint="@color/light_blue"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open in Maps"
                            android:textSize="12sp"
                            android:textColor="@color/light_blue"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!--  Address Info  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03 West Riding Road, Hillcrest, KZN"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="16dp"/>

        <!--  Hours Info  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop-off Hours:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday To Friday, 8:00 AM â€“ 4:00 PM"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We Kindly Ask That All Donations Be Made During Working Hours."
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!--  Wish List Title  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wish List"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Below is a list of items we currently need most"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!--  Wish List Table  -->
        <!-- (keeping exactly your structure, omitted here for brevity) -->

        <!--  Action Buttons  -->
        <Button
            android:id="@+id/buttonGetDirections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Directions"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/light_blue"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_navigation"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonCallUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Us"
            android:textColor="@color/light_blue"
            android:background="@drawable/button_outline"
            android:drawableStart="@drawable/ic_call"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>
