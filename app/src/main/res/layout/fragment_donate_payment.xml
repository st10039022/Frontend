<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="120dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Donate"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- zapper instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan QR code to donate"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- method buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnZapper"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Zapper"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/amount_button_outline"
                android:layout_margin="6dp" />

            <Button
                android:id="@+id/btnEFT"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="EFT"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/amount_button_outline"
                android:layout_margin="6dp" />

            <Button
                android:id="@+id/btnBabychino"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="BabyChino"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/amount_button_outline"
                android:layout_margin="6dp" />
        </LinearLayout>

        <!-- QR card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/zapper_logo"
                    android:contentDescription="Zapper Logo" />

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/zapper"
                        android:contentDescription="Zapper QR Code" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Scan with Zapper App"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick • Safe • Secure"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- thank you -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for your kindness. Every contribution helps us care for the little ones"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- bottle card centered -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_marginBottom="16dp">

            <!-- inner container with blue background -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_bottle_bg"
                android:padding="24dp"
                android:foregroundGravity="center">

                <!-- precise clipping window mapped in code to the bottle's inner cavity -->
                <FrameLayout
                    android:id="@+id/milkClip"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="top|start"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:visibility="invisible">

                    <!-- solid base so sides & bottom are always filled -->
                    <View
                        android:id="@+id/milkSolid"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:background="@android:color/white" />

                    <!-- SURFACE BAND that tracks the current level; waves live here -->
                    <FrameLayout
                        android:id="@+id/milkSurface"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom"
                        android:clipChildren="true"
                        android:clipToPadding="true">

                        <!-- back wave -->
                        <ImageView
                            android:id="@+id/milkFillBack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"
                            android:src="@drawable/milk_wave_back"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop" />

                        <!-- front wave -->
                        <ImageView
                            android:id="@+id/milkFillFront"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|center_horizontal"
                            android:src="@drawable/milk_wave_front"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop" />
                    </FrameLayout>
                </FrameLayout>

                <!-- bottle outline on top (transparent fill; outline only) -->
                <ImageView
                    android:id="@+id/imageBottle"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baby_bottle_outline"
                    android:contentDescription="Baby bottle"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- progress label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This month's donation progress"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- progress bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/donationProgressBar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="12dp"
            android:progress="0"
            app:trackColor="@color/light_grey"
            app:indicatorColor="@color/light_blue" />

        <!-- public goal reached line (shown to non-admins when goal is reached) -->
        <TextView
            android:id="@+id/textGoalPublic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal reached — thank you for your support"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- admin only numbers -->
        <TextView
            android:id="@+id/textRaised"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raised R 0.00"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal R 10,000.00"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- admin edit -->
        <Button
            android:id="@+id/btnEditDonation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Edit Donation Progress"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- done -->
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Done"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/light_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</ScrollView>
