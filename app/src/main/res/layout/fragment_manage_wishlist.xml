<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ManageWishlistFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Wishlist"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Input for new product -->
        <EditText
            android:id="@+id/inputProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter product name"
            android:padding="12dp"
            android:background="@drawable/edittext_outline"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="12dp" />

        <!-- Priority spinner -->
        <Spinner
            android:id="@+id/spinnerPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:entries="@array/priorities" />

        <!-- Add product button -->
        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/light_blue"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView showing current wishlist -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerManageWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            tools:listitem="@layout/row_manage_wishlist_item" />

        <!-- Empty state message (optional) -->
        <TextView
            android:id="@+id/textEmptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No items in wishlist yet"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
